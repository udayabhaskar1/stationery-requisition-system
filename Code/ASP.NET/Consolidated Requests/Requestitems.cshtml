@model IEnumerable<logicProject.Models.EF.RequestItemsViewModel>

@{
    ViewBag.Title = "Requestitems";
}

<h2>Requestitems</h2>

<h1 style="color:blue">RequestNo:@ViewBag.Id</h1>


@section Styles {

    <link rel="stylesheet" href="https://max.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
}



<table id="requestitems_table" class="table table-striped table-bordered table-sm table-responsive table-hover cell-border">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.requestDetail.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.requestDetail.ReqQty)
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.requestDetail.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.requestDetail.ReqQty)
                </td>


            </tr>
        }
    </tbody>


</table>

@section Scripts {

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>

    <script>
            $(document).ready(function () {
                $('#requestitems_table').DataTable();
            })
    </script>
}
