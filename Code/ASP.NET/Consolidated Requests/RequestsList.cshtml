

@model IEnumerable<logicProject.Models.EF.RequestListViewModel>

@{
    ViewBag.Title = "RequestsList";

}

<h2>RequestsList</h2>

@section Styles {
    
    <link rel="stylesheet" href="https://max.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
}


<form method="post" action="/Request/RequestsList">

    <label>FromDate:</label>
    <input class="text-box single-line"
           data-val="true"
           id="FromDate"
           name="FromDate"
           type="date" value="@ViewBag.Fromdate" />

    <label>ToDate:</label>
    <input class="text-box single-line"
           data-val="true"
           id="Todate"
           name="ToDate"
           type="date" value="@ViewBag.Todate" />

    <input type="submit" value="Generate" class="btn" />

</form>


